<div>
    <button type="submit" class="btn">Login</button>
</div>


</form>

<p id="hello"></p>



<div class="create">
<p >Don't have an account? <a href="http://localhost:4000/signup"> Create</a></p>


    </div>

    

 <script>

const hello = document.getElementById('veer').addEventListener('submit' , async(e)=>{
   e.preventDefault()
   const name = e.target.nawa.value;
   const password  = e.target.password.value;
  
        const sumbit = async()=>{
        
        const transfer = await fetch("http://localhost:4000/login" , {
            method: "POST",
            headers: {
                  "Content-type" : "application/json"
            } ,
            body: JSON.stringify({
                name: name,
                password: pwd
            })

        }) 
        const data = await transfer.json();
        document.getElementById('hello').textContent = `Data is ${data.name}`
    } 
  return  sumbit()
  console.log("HELLo")

})

hello();
    
</script>
    
