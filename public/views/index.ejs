<body>
  

    <div class="parent">

<h1>Welcome Back!!</h1>

<form id="veer">
<div class="input-box">
<input type="text" name="nawa" placeholder="Username" required>

</div>

<div class="input-box">
    <input type="password" name="pwd" placeholder="Password" required>
   
    </div>

    <div class="remo">

        <label class="rem"><input type="checkbox">Remember me</label>
     
        <a href="##">Forgot Password?</a>

